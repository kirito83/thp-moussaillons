<h1>Nouveau Corsair</h1>

<br/>

<%= form_for @corsair do |f| %>
  	<div class='form-group'>
		<label>Prenom</label>
		<%= f.text_field :first_name, class: 'form-control' %>
	</div>
	<div class='form-group'>
		<label>Age</label>
		<%= f.text_field :age, class: 'form-control' %>
	</div>
	<br/>
	<div class='form-group'>
		<button type='submit' class='btn btn-primary'>Creation Corsair</button>
	</div>
<% end %>